$(eval $(call import.MODULE.defs,TEST,test,LIBHB))
$(eval $(call import.CLANG.process_c_o,TEST))
$(eval $(call import.CLANG.link_exe++,TEST))

TEST.ns_search = .

TEST.src/   = $(SRC/)test/
TEST.build/ = $(BUILD/)test/

TEST.c   = $(wildcard $(TEST.src/)*.c)
TEST.c.o = $(patsubst $(SRC/)%.c,$(BUILD/)%.o,$(TEST.c))

TEST.exe = $(BUILD/)$(call TARGET.exe,$(HB.name)CLI)

TEST.CLANG.L = $(CONTRIB.build/)lib

TEST.libs = $(LIBHB.a)

TEST.CLANG.l = \
        ass avresample avformat avcodec avfilter avutil mp3lame dvdnav \
        dvdread fontconfig fribidi ogg \
        samplerate swscale vpx theoraenc theoradec vorbis vorbisenc x264 \
        bluray freetype xml2 bz2 z jansson

ifeq (1,$(FEATURE.qsv))
    TEST.CLANG.D += USE_QSV HAVE_THREADS=1
ifeq ($(BUILD.system),linux)
    TEST.CLANG.l += va va-drm
endif
endif

ifeq (1,$(FEATURE.x265))
    TEST.CLANG.D += USE_X265
endif

TEST.CLANG.l += $(foreach m,$(MODULES.NAMES),$($m.OSL.libs))

TEST.install.exe = $(DESTDIR)$(PREFIX/)bin/$(notdir $(TEST.exe))

###############################################################################

TEST.out += $(TEST.c.o)
TEST.out += $(TEST.exe)

BUILD.out += $(TEST.out)
BUILD.out += $(TEST.install.exe)

###############################################################################

TEST.CLANG.I += $(LIBHB.CLANG.I)

ifeq ($(BUILD.system),darwin)
    TEST.CLANG.f += IOKit CoreServices AudioToolbox Foundation
    TEST.CLANG.l += iconv
else ifeq ($(BUILD.system),linux)
    TEST.CLANG.l += pthread dl m
else ifeq ($(BUILD.system),kfreebsd)
    TEST.CLANG.l += pthread dl m
else ifeq ($(BUILD.system),solaris)
    TEST.CLANG.l += pthread nsl socket iconv
    TEST.CLANG.D += _POSIX_C_SOURCE=200112L __EXTENSIONS__
else ifeq (1-mingw,$(BUILD.cross)-$(BUILD.system))
ifeq ($(HAS.dlfcn),1)
    TEST.CLANG.l += dl
endif
ifeq (1,$(HAS.pthread))
    TEST.CLANG.l += pthread
else
    TEST.CLANG.l += pthreadGC2
endif
    TEST.CLANG.l += iconv ws2_32 regex uuid ole32
    TEST.CLANG.D += PTW32_STATIC_LIB
    TEST.CLANG.static = 1
endif #   (1-mingw,$(BUILD.cross)-$(BUILD.system))
